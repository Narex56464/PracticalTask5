<Page x:Class="WpfApp8.Pages.Task9Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task9Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 5 0 0">
            <TextBlock Text="Задание 9"
                       FontSize="25"
                       FontWeight="Bold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0 70 0 0"
                        Grid.Row="0">
            <TextBlock Text="Вычислить значение логического выражения"
                           FontSize="15"
                           FontWeight="Normal"/>
            <TextBlock Text="a) (-(x * y less 0)) ∨ (y > x) при x=1,y=2;"
                       Margin="0 20 0 0"
                       FontSize="15"
                       Width="300"/>
            <TextBlock Text="б) (x * y ≠ 0) ^ (y less x) при x=2,y=1;"
                       Width="300"
                       FontSize="15"
                       Margin="0 5 0 0"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Ответ"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Width="110"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 120 0 0">
            <TextBlock Text="a)"
                       x:Name="TbA"
                       Margin="0 20 0 0"
                       Width="110"
                       FontSize="20"/>
            <TextBlock Text="б)"
                       x:Name="TbB"
                       Width="110"
                       Margin="0 5 0 0"
                       FontSize="20"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 10"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnNext"
                    Click="BtnNext_Click"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
